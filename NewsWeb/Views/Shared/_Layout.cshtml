<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewsWeb</title>
    <base href="~/" />

    <link href="~/fonts/css/all.min.css" rel="stylesheet" type="text/css">

    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@1,300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/fonts/css/fontawesome.min.css" rel="stylesheet" />
    <link rel="icon" href="~/img/icon/chart.png" />
    <link href="//cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet" />
</head>
<body>
    <header class="top-nav mb-2">
        <nav class="navbar navbar-expand-sm navbar-light bg-white navbar-toggleable-sm position-fixed" style="width: 100%; z-index: 1000">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OuinPress</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex " id="exCollapsingNavbar2">
                    <span class="position-absolute">
                        <partial name="_LoginPartial" />
                    </span>
                    @(await Html.RenderComponentAsync<Navigation>( RenderMode.ServerPrerendered))

                    <form class="ml-auto mr-9" asp-action="Search" asp-controller="Home">
                        <div class="search">
                            <input type="text" name="query" class="form-control" maxlength="64" placeholder="Search" />
                            <button type="submit" class="btn btn-search"><i class="fa fa-search"></i></button>
                        </div>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    @*<div class="icon-bar">
            <a href="http://facebook.com" target="_blank" class="facebook"><i class="fab fa-facebook"></i></a>
            <a href="http://twitter.com" target="_blank" class="twitter"><i class="fab fa-twitter"></i></a>
            <a href="http://linkedin.com" target="_blank" class="linkedin"><i class="fab fa-linkedin"></i></a>
            <a href="http://pinterest.com" target="_blank" class="pinterest"><i class="fab fa-pinterest"></i></a>
        </div>*@

    <div class="container" style="margin-top: 62px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted" style="height: 600px">
            <div class="container">
                &copy; 2020 - navigation - <a asp-area="" asp-controller="home" asp-action="privacy">privacy</a>
            </div>
        </footer>*@

    <script src="_framework/blazor.server.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
