@model ArticleViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input id="titre" asp-for="Titre" placeholder="titre de l'article" class="form-control" />
                <span asp-validation-for="Titre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea rows="20" asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-md-5">
                    <div class="form-group">                        
                        <select asp-for="CategoryId" class="form-control"
                                asp-items="@(new SelectList(Model.Categories,"Id", "Name"))">
                            <option>Please select category</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label>
                            <input asp-for="File" type="file" style="display:none;" />
                            <span class="btn-sm btn btn-primary">choose</span>
                        </label>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">                        
                        <select asp-for="PublisherId" class="form-control"
                                asp-items="@(new SelectList(Model.Publishers,"Id", "Name"))">
                            <option>Please select publisher</option>
                        </select>
                        <span asp-validation-for="PublisherId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}